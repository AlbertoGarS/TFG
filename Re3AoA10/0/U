FoamFile
{
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "$FOAM_CASE/include/data";

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform ($Ux $Uy 0);

boundaryField
{
    entrada
    {
        type            freestreamVelocity;
        freestreamValue $internalField;
    }

    salida
    {
        type            freestreamVelocity;
        freestreamValue $internalField;
    }

    naca0012
    {
        type            noSlip;
    }

    frontAndBack
    {
        type            empty;
    }
}

